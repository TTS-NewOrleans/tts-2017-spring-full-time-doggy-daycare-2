<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1>Owners</h1>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Emergency name</th>
            <th>Emergency phone</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @owners.each do |owner| %>
            <tr>
              <td><%= owner.first_name %></td>
              <td><%= owner.last_name %></td>
              <td><%= owner.phone %></td>
              <td><%= owner.address %></td>
              <td><%= owner.city %></td>
              <td><%= owner.state %></td>
              <td><%= owner.zip %></td>
              <td><%= owner.emergency_name %></td>
              <td><%= owner.emergency_phone %></td>
              <td><%= link_to 'Show', owner %></td>
              <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
              <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Owner', new_owner_path %>
    </div>
  </div>
</div>

